{
    "document": {
        "highlighter_color": "#000000",
        "text_color": "#ffffff",
        "max_font_size": 16,
        "font": "pyghost/fonts/Roboto-Regular.ttf"
    },
    "ocr": [
        {
            "name": "tesseractEN",
            "module": "pyghost.ocr",
            "cls": "TesseractOcr",
            "languages": [
                "en"
            ],
            "config": {
                "lang": "eng"
            }
        },
        {
            "name": "tesseractDE",
            "module": "pyghost.ocr",
            "cls": "TesseractOcr",
            "languages": [
                "de"
            ],
            "config": {
                "lang": "deu"
            }
        }
    ],
    "matchers": [
        {
            "name": "PersonMatcherEN",
            "label": "person",
            "module": "pyghost.matchers",
            "cls": "SpacyMatcher",
            "languages": [
                "en"
            ],
            "config": {
                "model": "en_core_web_sm",
                "labels": [
                    "PERSON"
                ]
            }
        },
        {
            "name": "PersonMatcherDE",
            "label": "person",
            "module": "pyghost.matchers",
            "cls": "SpacyMatcher",
            "languages": [
                "de"
            ],
            "config": {
                "model": "de_core_news_sm",
                "labels": [
                    "PER"
                ]
            }
        },
        {
            "name": "OrgMatcherEN",
            "label": "organization",
            "module": "pyghost.matchers",
            "cls": "SpacyMatcher",
            "languages": [
                "en"
            ],
            "config": {
                "model": "en_core_web_sm",
                "labels": [
                    "ORG"
                ]
            }
        },
        {
            "name": "OrgMatcherDE",
            "label": "organization",
            "module": "pyghost.matchers",
            "cls": "SpacyMatcher",
            "languages": [
                "de"
            ],
            "config": {
                "model": "de_core_news_sm",
                "labels": [
                    "ORG"
                ]
            }
        },
        {
            "name": "LocationMatcherEN",
            "label": "location",
            "module": "pyghost.matchers",
            "cls": "SpacyMatcher",
            "languages": [
                "en"
            ],
            "config": {
                "model": "en_core_web_sm",
                "labels": [
                    "GPE"
                ]
            }
        },
        {
            "name": "LocationMatcherDE",
            "label": "location",
            "module": "pyghost.matchers",
            "cls": "SpacyMatcher",
            "languages": [
                "de"
            ],
            "config": {
                "model": "de_core_news_sm",
                "labels": [
                    "LOC"
                ]
            }
        },
        {
            "name": "EmailMatcher",
            "label": "email",
            "module": "pyghost.matchers",
            "cls": "RegexMatcher",
            "languages": [
                "en",
                "de"
            ],
            "config": {
                "patterns": [
                    "[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}",
                    {
                        "pattern": "Email:[ ]{0,}([A-Za-z0-9._%+-@]*)",
                        "group": 1
                    }
                ]
            }
        },
        {
            "name": "PhoneMatcher",
            "label": "phone",
            "module": "pyghost.matchers",
            "cls": "RegexMatcher",
            "languages": [
                "en",
                "de"
            ],
            "config": {
                "patterns": [
                    "\\(\\+?[\\d]{2,3}\\)[ \\-][\\d]{3,6}[ \\-][\\d]{3,8}"
                ]
            }
        },
        {
            "name": "IbanMatcher",
            "label": "phone",
            "module": "pyghost.matchers",
            "cls": "RegexMatcher",
            "languages": [
                "en",
                "de"
            ],
            "config": {
                "patterns": [
                    "[A-Z]{2}[0-9]{2}(?:[ ]?[0-9]{4}){4}(?!(?:[ ]?[0-9]){3})(?:[ ]?[0-9]{1,2})?"
                ]
            }
        }
    ],
    "transformers": [
        {
            "name": "LabelTransformer",
            "module": "pyghost.transformers",
            "cls": "LabelTransformer",
            "config": {
                "prefix": "<",
                "suffix": ">",
                "memory": true
            }
        }
    ]
}